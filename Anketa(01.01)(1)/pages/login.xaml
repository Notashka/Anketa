<Page x:Class="Anketa_01._01__1_.pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anketa_01._01__1_.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Введите регистрационные данные" Height="126" >
            <StackPanel>
                    <GroupBox Header="Введите логин"  Height="46" Margin="0,0,-0.4,0" >
                    <TextBox x:Name="txtLogin"/>
                </GroupBox>
                    <GroupBox Header="Введите пароль"  Height="46" Margin="0,0,-0.4,0">
                    <PasswordBox x:Name="txtPassword"/>
                </GroupBox>
              </StackPanel>
            </GroupBox>
            
                <Button x:Name="btnLogin" Content="Авторизоваться" Click="btnLogin_Click" Style="{StaticResource GelButton}" IsDefault="True" Height="25" Margin="1" Width="210"/>
            <Button x:Name="btnReg" Content="Зарегистрироваться" Click="btnReg_Click" Style="{StaticResource GelButton}" Height="25" IsDefault="True" Margin="1" Width="210"/>
           
        </StackPanel>
    </Grid>
</Page>
